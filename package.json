{
  "name": "open-network-spectral-interface",
  "version": "0.0.1",
  "description": "Embedded API for controlling hardware",
  "main": "server.js",
  "engines": {
    "node": "6.12.1"
  },
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\"",
    "build-forever": "npm run build && npm run forever",
    "forever": "forever start -a -l forever.log -o out.log -e err.log dist/server.js",
    "forever-stopall": "forever stopall"
  },
  "repository": {
    "type": "git",
    "url": "https://streamtechinc.visualstudio.com/DefaultCollection/Cloud%20Connect/_git/HardwareAPI"
  },
  "author": "Stream Technologies Inc",
  "license": "ISC",
  "dependencies": {
    "applicationinsights": "^1.0.0",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "ffi": "^2.2.0",
    "forever": "^0.15.3",
    "guid-typescript": "^1.0.7",
    "ref": "^1.3.5",
    "ref-array": "^1.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.1",
    "@types/errorhandler": "0.0.31",
    "@types/express": "^4.0.37",
    "@types/ffi": "0.0.19",
    "@types/node": "^8.0.47",
    "@types/ref-array": "0.0.28",
    "nodemon": "^1.12.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  }
}
